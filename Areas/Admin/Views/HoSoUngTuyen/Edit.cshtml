@using TrangChu.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@model HoSoUngTuyen

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa hồ sơ ứng tuyển</h2>
    </div>
    
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chỉnh sửa hồ sơ ứng tuyển</h5>
                        
                        <form method="Post" asp-area="Admin" asp-controller="HoSoUngTuyen" asp-action="Edit">
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Tin tuyển dụng <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <select asp-for="TinTuyenDungId" class="form-select" asp-items="ViewBag.TinTuyenDungList" required>
                                        <option value="">--- Chọn tin tuyển dụng ---</option>
                                    </select>
                                    <span asp-validation-for="TinTuyenDungId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Ứng viên <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <select asp-for="TaiKhoanId" class="form-select" asp-items="ViewBag.TaiKhoanList" required>
                                        <option value="">--- Chọn ứng viên ---</option>
                                    </select>
                                    <span asp-validation-for="TaiKhoanId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Họ và tên</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="HoTen" placeholder="Nhập họ và tên..." />
                                    <small class="form-text text-muted">Nếu để trống, hệ thống sẽ lấy từ thông tin tài khoản.</small>
                                    <span asp-validation-for="HoTen" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Nhập email..." />
                                    <small class="form-text text-muted">Nếu để trống, hệ thống sẽ lấy từ thông tin tài khoản.</small>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Số điện thoại</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="SoDienThoai" placeholder="Nhập số điện thoại..." />
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">CV/Resume URL</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="CvUrl" placeholder="Nhập đường dẫn CV..." />
                                    <small class="form-text text-muted">Nhập đường dẫn đến file CV (ví dụ: /uploads/cv/file.pdf)</small>
                                    <span asp-validation-for="CvUrl" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Thư xin việc</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="ThuXinViec" rows="5" placeholder="Nhập thư xin việc...">@Model.ThuXinViec</textarea>
                                    <span asp-validation-for="ThuXinViec" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Trạng thái</label>
                                <div class="col-sm-10">
                                    <select asp-for="TrangThai" class="form-select">
                                        <option value="Chờ xử lý">Chờ xử lý</option>
                                        <option value="Đã duyệt">Đã duyệt</option>
                                        <option value="Đã từ chối">Đã từ chối</option>
                                        <option value="Đã phỏng vấn">Đã phỏng vấn</option>
                                    </select>
                                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Ghi chú</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="GhiChu" rows="3" placeholder="Nhập ghi chú...">@Model.GhiChu</textarea>
                                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-area="Admin" asp-controller="HoSoUngTuyen" asp-action="Index" class="btn btn-warning">
                                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Lưu thông tin
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

