@using TrangChu.Models
@model IList<NhaTuyenDung>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Quản lý nhà tuyển dụng</h2>
        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i>Thêm nhà tuyển dụng
            </a>
        </p>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <!-- Form tìm kiếm và lọc -->
                        <form method="get" asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Index" class="mb-3">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="searchString" value="@(ViewBag.SearchString ?? "")" placeholder="Tìm kiếm theo tên, email, SĐT, mã số thuế..." />
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="filterStatus">
                                        <option value="">Tất cả trạng thái</option>
                                        @if (ViewBag.FilterStatus != null && ViewBag.FilterStatus.ToString() == "active")
                                        {
                                            <option value="active" selected>Hoạt động</option>
                                        }
                                        else
                                        {
                                            <option value="active">Hoạt động</option>
                                        }
                                        @if (ViewBag.FilterStatus != null && ViewBag.FilterStatus.ToString() == "inactive")
                                        {
                                            <option value="inactive" selected>Không hoạt động</option>
                                        }
                                        else
                                        {
                                            <option value="inactive">Không hoạt động</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i> Tìm kiếm
                                    </button>
                                    <a asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-counterclockwise"></i> Làm mới
                                    </a>
                                </div>
                            </div>
                        </form>
                        
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">ID</th>
                                    <th class="col-3 text-center">Tên công ty</th>
                                    <th class="col-2 text-center">Địa chỉ</th>
                                    <th class="col-2 text-center">Email</th>
                                    <th class="col-2 text-center">Số điện thoại</th>
                                    <th class="col-1 text-center">Trạng thái</th>
                                    <th class="col-1 text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.Id</td>
                                        <td class="text-left" scope="row">@item.TenCongTy</td>
                                        <td class="text-left" scope="row">@(item.DiaChi ?? "-")</td>
                                        <td class="text-left" scope="row">@(item.Email ?? "-")</td>
                                        <td class="text-center" scope="row">@(item.SoDienThoai ?? "-")</td>
                                        <td class="text-center" scope="row">
                                            <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                                @(item.IsActive ? "Hoạt động" : "Không hoạt động")
                                            </span>
                                        </td>
                                        <td class="text-center" scope="row">
                                            <a asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="NhaTuyenDung" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

