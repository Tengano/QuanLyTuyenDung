@using TrangChu.Models
@model IList<TaiKhoan>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Quản lý tài khoản</h2>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <!-- Form tìm kiếm và lọc -->
                        <form method="get" asp-area="Admin" asp-controller="TaiKhoan" asp-action="Index" class="mb-3">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="searchString" value="@(ViewBag.SearchString ?? "")" placeholder="Tìm kiếm theo tên, email, SĐT..." />
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="filterRole">
                                        <option value="">Tất cả vai trò</option>
                                        <option value="Admin" selected="@(ViewBag.FilterRole?.ToString() == "Admin")">Admin</option>
                                        <option value="Employer" selected="@(ViewBag.FilterRole?.ToString() == "Employer")">Nhà tuyển dụng</option>
                                        <option value="Candidate" selected="@(ViewBag.FilterRole?.ToString() == "Candidate")">Ứng viên</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i> Tìm kiếm
                                    </button>
                                    <a asp-area="Admin" asp-controller="TaiKhoan" asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-counterclockwise"></i> Làm mới
                                    </a>
                                </div>
                            </div>
                        </form>
                        
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">ID</th>
                                    <th class="col-2 text-center">Họ và tên</th>
                                    <th class="col-2 text-center">Email</th>
                                    <th class="col-2 text-center">Số điện thoại</th>
                                    <th class="col-1 text-center">Vai trò</th>
                                    <th class="col-2 text-center">Công ty</th>
                                    <th class="col-1 text-center">Trạng thái</th>
                                    <th class="col-1 text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" scope="row">@item.Id</td>
                                        <td class="text-left" scope="row">@item.HoTen</td>
                                        <td class="text-left" scope="row">@item.Email</td>
                                        <td class="text-center" scope="row">@item.SoDienThoai</td>
                                        <td class="text-center" scope="row">
                                            <span class="badge @(item.Role == "Admin" ? "bg-danger" : item.Role == "Employer" ? "bg-warning" : "bg-info")">
                                                @(item.Role == "Admin" ? "Admin" : item.Role == "Employer" ? "Nhà tuyển dụng" : "Ứng viên")
                                            </span>
                                        </td>
                                        <td class="text-left" scope="row">
                                            @if (item.NhaTuyenDung != null)
                                            {
                                                <span>@item.NhaTuyenDung.TenCongTy</span>
                                            }
                                            else if (item.Role == "Employer")
                                            {
                                                <span class="text-danger">Chưa gán công ty</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td class="text-center" scope="row">
                                            <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                                @(item.IsActive ? "Hoạt động" : "Không hoạt động")
                                            </span>
                                        </td>
                                        <td class="text-center" scope="row">
                                            <a asp-area="Admin" asp-controller="TaiKhoan" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="TaiKhoan" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

