@model TrangChu.Models.TinTuyenDung
@using System.Linq

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa tin tuyển dụng</h2>
    </div>
    
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin tin tuyển dụng</h5>
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <h6><i class="bi bi-exclamation-triangle"></i> Vui lòng kiểm tra lại thông tin:</h6>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <form method="Post" asp-area="Admin" asp-controller="TinTuyenDung" asp-action="Edit">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="NgayTao" />
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Nhà tuyển dụng <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <select asp-for="NhaTuyenDungId" class="form-select" asp-items="ViewBag.NhaTuyenDungList" required>
                                        <option value="">--- Chọn nhà tuyển dụng ---</option>
                                    </select>
                                    <span asp-validation-for="NhaTuyenDungId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Tiêu đề <span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="TieuDe" placeholder="Nhập tiêu đề tin tuyển dụng..." required />
                                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Mô tả công việc</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="MoTaCongViec" rows="5" placeholder="Nhập mô tả công việc...">@Model.MoTaCongViec</textarea>
                                    <span asp-validation-for="MoTaCongViec" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Yêu cầu</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="YeuCau" rows="5" placeholder="Nhập yêu cầu công việc...">@Model.YeuCau</textarea>
                                    <span asp-validation-for="YeuCau" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Quyền lợi</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="QuyenLoi" rows="5" placeholder="Nhập quyền lợi...">@Model.QuyenLoi</textarea>
                                    <span asp-validation-for="QuyenLoi" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Mức lương</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="MucLuong" placeholder="VD: 10-15 triệu, Thỏa thuận..." />
                                    <span asp-validation-for="MucLuong" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Địa điểm làm việc</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="DiaDiemLamViec" placeholder="Nhập địa điểm làm việc..." />
                                    <span asp-validation-for="DiaDiemLamViec" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Kinh nghiệm</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="KinhNghiem" placeholder="VD: 2-3 năm, Không yêu cầu..." />
                                    <span asp-validation-for="KinhNghiem" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Học vấn</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="HocVan" placeholder="VD: Đại học, Cao đẳng..." />
                                    <span asp-validation-for="HocVan" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Số lượng tuyển</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" asp-for="SoLuongTuyen" min="1" placeholder="Nhập số lượng tuyển..." />
                                    <span asp-validation-for="SoLuongTuyen" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Hạn nộp hồ sơ</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" asp-for="HanNopHoSo" value="@(Model.HanNopHoSo?.ToString("yyyy-MM-dd") ?? "")" />
                                    <span asp-validation-for="HanNopHoSo" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Trạng thái</label>
                                <div class="col-sm-10">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                                        <label class="form-check-label" for="IsActive">Hoạt động</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-area="Admin" asp-controller="TinTuyenDung" asp-action="Index" class="btn btn-warning">
                                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Lưu thông tin
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

